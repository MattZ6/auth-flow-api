{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@data/*": ["data/*"],
      "@infra/*": ["infra/*"],
      "@presentation/*": ["presentation/*"],
      "@main/*": ["main/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
